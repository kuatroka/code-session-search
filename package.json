{
  "name": "claude-run-plus",
  "version": "0.2.2",
  "description": "A beautiful web UI for browsing Claude Code conversation history",
  "type": "module",
  "bin": {
    "claude-run-plus": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "concurrently \"bun run dev:web\" \"bun run dev:server\"",
    "dev:server": "bun --watch api/index.ts -- --dev",
    "dev:web": "bunx vite --config web/vite.config.ts",
    "build": "bun run build:server && bun run build:web",
    "build:web": "bunx vite build --config web/vite.config.ts",
    "build:server": "bun build api/index.ts --outdir dist --target bun --format esm",
    "start": "bun dist/index.js",
    "prepublishOnly": "bun run build"
  },
  "dependencies": {
    "@subframe7536/sqlite-wasm": "^0.5.8",
    "@tanstack/react-virtual": "^3.13.14",
    "chokidar": "^4.0.3",
    "commander": "^13.1.0",
    "diff": "^8.0.2",
    "hono": "^4.7.8",
    "lucide-react": "^0.562.0",
    "open": "^10.1.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.0.7",
    "@types/node": "^22.10.5",
    "@types/react": "^19.0.7",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "prettier": "^3.7.4",
    "tailwindcss": "^4.0.7",
    "@types/bun": "latest",
    "typescript": "^5.7.3",
    "vite": "^6.0.11"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "claude",
    "claude-code",
    "cli",
    "conversation",
    "viewer",
    "streaming",
    "ai",
    "anthropic"
  ],
  "author": "Kamran Ahmed",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kamranahmedse/claude-run.git"
  },
  "homepage": "https://github.com/kamranahmedse/claude-run#readme",
  "bugs": {
    "url": "https://github.com/kamranahmedse/claude-run/issues"
  }
}
